{% extends 'users.html.twig' %}

{% block title %}Profile de {{ app.user.firstname }} {{ app.user.lastname }} {% endblock %}

{% block body %}
    {% for message in app.flashes('message') %}
        <div class="w3-panel w3-green">
            <p>{{ message }}</p>
        </div>
    {% endfor %}
    <table class="w3-table w3-bordered">
        <tr>
            <th>Civilité:</th><td>{{ app.user.civility }}</td>
        </tr>
        <tr>
            <th>Nom:</th><td>{{ app.user.lastname }}</td>
        </tr>
        <tr>
            <th>Prénom:</th><td>{{ app.user.firstname }}</td>
        </tr>
        <tr>
            <th>Email:</th><td>{{ app.user.email }}</td>
        </tr>
        <tr>
            <th>Téléphone:</th><td>{{ app.user.phoneMobile }}</td>
        </tr>
        <tr>
            <th>Adresse:</th><td>{{ app.user.address }}</td>
        </tr>
        <tr>
            <th>Code postale:</th><td>{{ app.user.postalCode }}</td>
        </tr>
        <tr>
            <th>Ville:</th><td>{{ app.user.city }}</td>
        </tr>
    </table>
    <div class="w3-bar w3-margin">
        <a href="{{ path('users_edit_profile') }}"><button class="w3-button w3-ripple w3-black w3-round-large">Modifier le profile</button></a>
        <a href="{{ path('users_passwd_edit') }}"><button class="w3-button w3-ripple w3-black w3-round-large">Modifier le mot de passe</button></a>
    </div>
{% endblock %}
